{
  "extends": "airbnb",
  "globals": {
    "document": true
  },
  "rules": {
    "no-plusplus": [
      "error", {
        "allowForLoopAfterthoughts": true
      }],
    "no-console": 0,
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": true, 
        "optionalDependencies": false, 
        "peerDependencies": false
      }]
  }
}
